{
  "parser": "@typescript-eslint/parser",
  "plugins": [ "@typescript-eslint" ],
  "parserOptions": {
    "sourceType": "module",
    "project": [
      "tsconfig.json",
      "tests/tsconfig.json"
    ]
  },
  "env": {
    "browser": false,
    "node": true
  },
  "rules": {
    "comma-dangle": [ 2, "never" ],
    "quotes": [ 2, "single" ],
    "eol-last": 2,
    "no-debugger": 1,
    "no-mixed-requires": 0,
    "no-underscore-dangle": 0,
    "no-multi-spaces": 0,
    "no-trailing-spaces": 0,
    "no-extra-boolean-cast": 0,
    "no-undef": 2,
    "no-unused-vars": 2,
    "no-var": 2,
    "no-param-reassign": 0,
    "no-else-return": 0,
    "no-console": 0,
    "prefer-const": 2,
    "new-cap": 0,
    "camelcase": 2,
    "semi": [ 2, "never" ],
    "valid-jsdoc": "error"
  }
}